@model IEnumerable<Fall2024_Assignment3_gdprasad.Models.Actor>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Actor Name
            </th>
            <th>
                Age
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gender):
            </th>
            <th>
                IMDB Link
            </th>
            <th>
                Photo
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Age)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Gender)
                </td>
                <td>
                    <!-- Make the IMDB link clickable and open in a new tab -->
                    <a href="@item.ImdbLink" target="_blank">@item.ImdbLink</a>
                </td>
                <td>
                    @if (item.PhotoLink != null)
                    {
                        <img src="@item.PhotoLink" alt="Actor Picture" style="max-width: 200px;"/>
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
